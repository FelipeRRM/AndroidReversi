<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="feliperrm.reversiandroid" >

    <application
        android:name=".Uteis.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Telas.GameActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Telas.MenuActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Telas.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Telas.OpcoesActivity"
            android:label="@string/title_activity_opcoes"
            android:parentActivityName=".Telas.MenuActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="feliperrm.reversiandroid.Telas.MenuActivity" />
        </activity>
        <activity
            android:name=".Telas.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".Telas.MenuActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="feliperrm.reversiandroid.Telas.MenuActivity" />
        </activity>
    </application>

</manifest>
